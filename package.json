{
  "name": "posine",
  "version": "0.1.0",
  "author": "David Mendoza",
  "license": "GNU GPLv3",
  "description": "Sistema de ventas hecho en react con un restful api hecho en nodejs y express",
  "private": true,
  "main": "main.js",
  "build": {
    "appId": "tech.sinewave.posine",
    "productName": "POSine",
    "asarUnpack": [
      "Server/Database/**"
    ],
    "copyright": "Copyright Â© 2019 ${author}",
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "assets/Icons/mac-icon.icns"
    },
    "linux": {
      "icon": "assets/Icons/lin-icon.png"
    },
    "win": {
      "icon": "assets/Icons/win-icon.ico"
    },
    "files": [
      "main.js",
      "node_modules/**/*",
      {
        "from": "./Server/",
        "to": "Server/",
        "filter": [
          "index.js",
          "Database/*",
          "!README.md",
          "!.prettierrc",
          "!.eslintrc.js"
        ]
      },
      {
        "from": "./Server/node_modules",
        "to": "Server/node_modules"
      },
      {
        "from": "./Client/build",
        "to": "./build"
      }
    ]
  },
  "scripts": {
    "client": "cd Client && npm start",
    "server": "cd Server && npm start",
    "start": "concurrently \"npm run client \" \"wait-on http://localhost:3000 && electron .\"",
    "package-win": "build -w",
    "package-lin": "build -l",
    "package-mac": "build -m"
  },
  "keywords": [],
  "devDependencies": {
    "concurrently": "^3.6.1",
    "electron": "^5.0.6",
    "electron-builder": "^20.44.4",
    "wait-on": "^3.2.0"
  },
  "dependencies": {
    "electron-is-dev": "^1.1.0",
    "electron-serve": "^0.3.0"
  }
}
